<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activity.Nhatro.ThongtinnhatroInf">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarInfNhatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btnBackInfNhatro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <ImageButton
                android:id="@+id/btnSaveInfNhatro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_check_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/btnBackInfNhatro"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Thông tin nhà trọ"
                android:textColor="#C6FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnBackInfNhatro"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="serif"
                    android:text="Tên nhà trọ"
                    android:textColor="@color/textMain"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTenTroInf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColor="@color/textMainLight"
                    android:textColorHint="@color/textMainLight"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@id/toolbarInfNhatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txtDiachiInf"
            android:textSize="15sp"
            android:textColor="@color/textMain"
            android:text="Địa chỉ:"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtDiachinf"
            android:textColor="@color/textMain"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_below="@id/txtDiachiInf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtGiadienInf"
            android:textSize="15sp"
            android:textColor="@color/textMain"
            android:layout_below="@id/edtDiachinf"
            android:layout_marginTop="10dp"
            android:text="Giá điện:"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtGiadienInf"
            android:textColor="@color/textMain"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_below="@id/txtGiadienInf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtGianuocInf"
            android:textSize="15sp"
            android:textColor="@color/textMain"
            android:layout_below="@id/edtGiadienInf"
            android:layout_marginTop="10dp"
            android:text="Giá nước:"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtGianuocInf"
            android:textColor="@color/textMain"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_below="@id/txtGianuocInf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDeleteNhatroInf"
            android:fontFamily="serif"
            android:textColor="#F44336"
            android:textSize="20sp"
            android:inputType="number"
            android:textAllCaps="true"
            android:text="Xóa"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edtGianuocInf"
            android:background="@drawable/custom_shape_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>