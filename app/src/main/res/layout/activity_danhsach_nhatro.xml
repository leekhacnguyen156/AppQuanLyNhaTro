<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Nhatro.DanhsachNhatro">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDSNhatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_shape_toobar"
        android:minHeight="?attr/actionBarSize"
        app:title=" ">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTenApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/textMainLight"
                android:drawableTop="@drawable/infmain"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Quản lý nhà trọ"
                android:textSize="20sp"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btnAddNhaTro"
        android:drawableStart="@drawable/ic_baseline_add_128"
        android:background="@drawable/custom_icon_new"
        android:layout_margin="5dp"
        android:text="Thêm nhà trọ mới"
        android:layout_below="@id/toolbarDSNhatro"
        android:textAllCaps="false"
        android:textColor="@color/textMain"
        android:fontFamily="serif"
        android:paddingStart="15dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />

    <ListView
        android:id="@+id/listviewDSNhatro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnAddNhaTro" />



</RelativeLayout>