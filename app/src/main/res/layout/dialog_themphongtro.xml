<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/layoutThem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Tên phòng:"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/password"
                android:textColor="@color/textMain"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtTenPhongThem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idten"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:fontFamily="serif"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idslkhachtoida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTenPhongThem"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/password"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Số lượng khách tối đa:"
                android:textColor="@color/textMain"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtslkhachtoida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idslkhachtoida"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="serif"
                android:inputType="number"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tvloaiphong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtslkhachtoida"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/password"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Loại phòng:"
                android:textColor="@color/textMain"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinnerLoaiphong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvloaiphong"
                android:layout_marginTop="10dp"
                android:theme="@style/spinner" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutThem"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2.05">

            <Button
                android:id="@+id/btnHuythemphong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_shape_cardview"
                android:fontFamily="serif"
                android:text="Hủy"
                android:textColor="#F44336"
                android:textSize="20sp" />

            <TextView
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnOkthemphong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_shape_cardview"
                android:fontFamily="serif"
                android:text="Thêm"
                android:textColor="#F44336"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>